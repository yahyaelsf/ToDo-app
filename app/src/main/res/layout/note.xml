<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:background="#F9F9F9" android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="100dp" android:layout_marginVertical="5dp">
    <ImageView
        android:id="@+id/oval_note"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:src="@drawable/oval_red"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:id="@+id/note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="32dp"
        android:textSize="17sp"
        android:textColor="#000000"
        android:text="Trip to San fran"
        />
    <TextView
        android:id="@+id/note_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#4A4A4A"
        android:text="12/12/98"
        android:layout_marginRight="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:id="@+id/note_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#4D5468"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/note_title"
        android:text="@string/this_is_an_example_of_a_note_text_just_to_fill_some_lines_and_it_will_be_as_a_description_of_the_note"
        />

</RelativeLayout>
