<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle"
    tools:context=".ViewTask">

    <ImageView
        android:onClick="backtotask"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:src="@drawable/backspacepurple"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        />


    <TextView
        android:id="@+id/listToDo"
        android:layout_width="144dp"
        android:layout_height="27dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="0dp"
        android:text="View Task"
        android:textColor="#FAF2F2"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        />
       <TextView
           android:onClick="editeTask"
           android:id="@+id/edit_task"
           android:layout_width="55dp"
           android:layout_height="46dp"
           android:textSize="28dp"
           android:layout_marginEnd="12dp"
           android:textColor="#FFFFFF"
           android:layout_alignParentEnd="true"
           android:text="Edit"
           android:layout_marginTop="10dp"
           />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/edit_task"
            android:background="@drawable/taskview">
        <EditText
            android:id="@+id/taskNamev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="#000000"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:text="Meet_joseph"
            android:textAppearance="@style/meet_joseph"
            />
        <TextView
            android:id="@+id/date_of_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/taskNamev"
            android:layout_marginTop="20dp"
            android:textSize="24sp"
            android:text="October_201"
            android:textAppearance="@style/october_201"
            android:lineSpacingExtra="0sp"
            android:gravity="top"
            android:alpha="0.3"
            />

            <View
                android:id="@+id/rectangle_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="151dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="70dp"
               android:background="#5A5760"
                />

            <TextView
                android:id="@+id/description"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="182dp"
                android:text="Description"
                android:textSize="24sp"
                android:lineSpacingExtra="0sp"
                android:gravity="top"
                android:alpha="0.14"
                />
            <EditText
                android:id="@+id/contexTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="70dp"
               android:layout_below="@+id/description"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:text="Have to meet him because I want to show him my latest app design in person."
                android:textAppearance="@style/have_to_mee"
                android:lineSpacingExtra="5sp"
                android:translationY="-2.47sp"
                android:gravity="top"
                />
            <TextView
                android:onClick="deleteTask"
                android:id="@+id/deletetask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textSize="32sp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:layout_marginBottom="32dp"
                />
        </RelativeLayout>


</RelativeLayout>
